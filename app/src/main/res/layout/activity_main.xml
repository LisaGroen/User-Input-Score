<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lisag.userinputscore.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gras"/>

        <View
            android:id="@+id/midden"
            android:layout_width="10dp"
            android:layout_height="375dp"
            android:layout_centerHorizontal="true"
            android:background="#0099cc"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/punten1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textSize="35sp"
                android:textColor="#006080"
                android:text="Punten: 0" />

            <TextView
                android:id="@+id/geel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textSize="22sp"
                android:textColor="#006080"
                android:text="Gele kaarten: 0" />

            <TextView
                android:id="@+id/rood1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="35dp"
                android:textSize="22sp"
                android:textColor="#006080"
                android:text="Rode kaarten: 0" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Gescoord"
                android:onClick="score1"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Eigen Goal"
                android:onClick="score2"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Gele kaart"
                android:onClick="geleKaart1"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Rode kaart"
                android:onClick="rodeKaart1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:id="@+id/rechts"
            android:layout_toRightOf="@id/midden">

            <TextView
                android:id="@+id/punten2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textSize="35sp"
                android:textColor="#006080"
                android:text="Punten: 0" />

            <TextView
                android:id="@+id/geel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textSize="22sp"
                android:textColor="#006080"
                android:text="Gele kaarten: 0" />

            <TextView
                android:id="@+id/rood2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="35dp"
                android:textSize="22sp"
                android:textColor="#006080"
                android:text="Rode kaarten: 0" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Gescoord"
                android:onClick="score2"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Eigen Goal"
                android:onClick="score1"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Gele kaart"
                android:onClick="geleKaart2"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Rode kaart"
                android:onClick="rodeKaart2"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>